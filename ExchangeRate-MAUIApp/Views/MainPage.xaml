<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExchangeRate_MAUIApp.Views.MainPage"
             Title="Курсна листа">

    <ScrollView>
        <VerticalStackLayout>

            <Button Text="Прикажи график"
       Clicked="OnShowChartClicked"
          
           HorizontalOptions="Center"/>



            <Label Text="{Binding DisplayDates}"/>

            <telerik:RadDataGrid 
        ItemsSource="{Binding Rates}" 
        AutoGenerateColumns="False"
        UserEditMode="None"
        GridLinesThickness="1"
        GridLinesVisibility="Horizontal"
       >

                <telerik:RadDataGrid.Columns>
                    <telerik:DataGridTextColumn PropertyName="Oznaka" HeaderText="Ознака"/>
                    <telerik:DataGridTextColumn PropertyName="Drzava" HeaderText="Држава"/>
                    <telerik:DataGridTextColumn PropertyName="Naziv" HeaderText="Назив"/>
                    <telerik:DataGridNumericalColumn PropertyName="Sreden" HeaderText="Среден"/>
                </telerik:RadDataGrid.Columns>
            </telerik:RadDataGrid>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>