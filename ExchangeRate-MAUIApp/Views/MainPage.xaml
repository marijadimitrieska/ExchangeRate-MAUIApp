<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ExchangeRate_MAUIApp.ViewModels"
             x:Class="ExchangeRate_MAUIApp.Views.MainPage"
             Title="Курсна листа">
<ScrollView>
    <VerticalStackLayout Padding="10">
        <CollectionView ItemsSource="{Binding Rates}" Margin="10">
            <CollectionView.Header>
                    <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                          ColumnSpacing="10"
                          Padding="5">
                        <Label Text="RBr" Grid.Column="0" FontAttributes="Bold"/>
                        <Label Text="Datum" FontAttributes="Bold" Grid.Column="1"/>
                        <Label Text="Valuta" FontAttributes="Bold" Grid.Column="2"/>
                        <Label Text="Nomin" FontAttributes="Bold" Grid.Column="3"/>
                        <Label Text="Oznaka" FontAttributes="Bold" Grid.Column="4"/>
                        <Label Text="Drzava" FontAttributes="Bold" Grid.Column="5"/>
                        <Label Text="DrzavaAng" FontAttributes="Bold" Grid.Column="6"/>
                        <Label Text="DrzavaAl" FontAttributes="Bold" Grid.Column="7"/>
                        <Label Text="NazivMak" FontAttributes="Bold" Grid.Column="8"/>
                        <Label Text="NazivAng" FontAttributes="Bold" Grid.Column="9"/>
                        <Label Text="NazivAl" FontAttributes="Bold" Grid.Column="10"/>
                        <Label Text="Sreden" FontAttributes="Bold" Grid.Column="11"/>
                        <Label Text="Datum_f" FontAttributes="Bold" Grid.Column="12"/>
                    </Grid>
            </CollectionView.Header>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                          ColumnSpacing="10"
                          Padding="5">
                            <Label Text="{Binding RBr}" Grid.Column="0"/>
                        <Label Text="{Binding Datum, StringFormat='{}{0:dd.MM.yyyy}'}" Grid.Column="1"/>
                        <Label Text="{Binding Valuta}" Grid.Column="2"/>
                        <Label Text="{Binding Nomin}" Grid.Column="3"/>
                        <Label Text="{Binding Oznaka}" Grid.Column="4"/>
                        <Label Text="{Binding Drzava}" Grid.Column="5"/>
                        <Label Text="{Binding DrzavaAng}" Grid.Column="6"/>
                        <Label Text="{Binding DrzavaAl}" Grid.Column="7"/>
                        <Label Text="{Binding NazivMak}" Grid.Column="8"/>
                        <Label Text="{Binding NazivAng}" Grid.Column="9"/>
                        <Label Text="{Binding NazivAl}" Grid.Column="10"/>
                        <Label Text="{Binding Sreden, StringFormat='{}{0:F4}'}" Grid.Column="11"/>
                        <Label Text="{Binding Datum_f, StringFormat='{}{0:dd.MM.yyyy}'}" Grid.Column="12"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
         </CollectionView>
           



        <Button Text="Прикажи график"
                Clicked="OnShowChartClicked"
                HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ScrollView>

</ContentPage>